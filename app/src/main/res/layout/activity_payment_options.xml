<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment_options"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Payment Options"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"

        />


 


  <TextView
      android:id = "@+id/visa"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:background="@drawable/visa"
      android:layout_marginStart="80dp"
      android:layout_marginEnd="13dp"

/>

    <TextView
        android:id = "@+id/paypal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/paypal"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="13dp"
        />



<ImageView
    android:id = "@+id/logo"
    android:layout_width="150dp"
    android:layout_height="125dp"
    android:background = "@drawable/applogo"
    android:layout_marginStart="136dp"
    android:visibility="gone"
    />

    <TextView
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_left"
        android:layout_marginTop="-120dp"
        android:visibility="gone"
        />

    <TextView
        android:id = "@+id/card_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Card Number"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        />


        <EditText
            android:id="@+id/card_number"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="4565 2344 2123 0421"
            android:textColorHint="#808080"
            android:visibility="gone"
            />


    <ImageView
        android:id = "@+id/front_side"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="-45dp"
        android:background="@drawable/front_side"
        android:visibility="gone"
        />

    <ImageView
        android:id = "@+id/visa_2"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/visa_2"
        android:visibility="gone"
        />


    <ImageView
        android:id = "@+id/mastercard"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/mastercard"
        android:visibility="gone"
        />

     <TextView
         android:id="@+id/expire_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Expiry Date"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
    />

        <EditText
            android:id="@+id/expiration_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="MM/YY"
            android:textColorHint="#808080"
            android:visibility="gone"
            />


    <TextView
        android:id="@+id/CVV_text"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="-65dp"
        android:text="CVV"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/security_code"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:hint="3 digits"
        android:textColorHint="#808080"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/back_side"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:background="@drawable/back_side"
        android:layout_marginStart="300dp"
        android:layout_marginTop="-42dp"
        android:visibility="gone"
       />



    <TextView
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/confirm"
        android:visibility="gone"
        />

</LinearLayout>